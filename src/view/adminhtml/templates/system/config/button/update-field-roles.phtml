<?php /** @var Magento\Framework\View\Element\Template $block */ ?>
<script>
    require([
        'jquery'
    ], function (jQuery) {

        function enableUpdateButton() {
            Form.Element.enable('updatefieldroles_button');
            $('updatefieldroles_button').removeClassName('disabled');
        }

        function disableUpdateButton() {
            Form.Element.disable('updatefieldroles_button');
            $('updatefieldroles_button').addClassName('disabled');
        }

        jQuery('#updatefieldroles_button').click(function () {

            if ($('updatefieldroles_load_span').hasClassName('no-display')) {
                $('updatefieldroles_load_span').removeClassName('no-display');
                $('updatefieldroles_load_message_span').update('<?= $block->escapeJs(__('Updating field roles')) ?>');
            }

            new Ajax.Request('<?= $block->escapeUrl($block->getUrl('factfinder/fieldroles/update')) ?>', {
                parameters: {},
                loaderArea: false,
                asynchronous: true,
                onCreate: disableUpdateButton(),
                onComplete: function (transport) {
                    var response = JSON.parse(transport.responseText);
                    $('updatefieldroles_load_message_span').update(response.message);
                    $('updatefieldroles_load_spinner').hide();
                    enableUpdateButton();
                }
            });
        });
    });
</script>

<?= /* @noEscape */ $block->getButtonHtml() ?>
<div class="sync-indicator no-display" id="updatefieldroles_load_span">
    <img alt="Loading" id="updatefieldroles_load_spinner" style="margin:0 5px" src="<?= $block->escapeUrl($block->getViewFileUrl('images/process_spinner.gif')) ?>"/>
    <span id="updatefieldroles_load_message_span"></span>
</div>
